{
  "name": "react-native-more-or-less-text",
  "version": "3.0.1",
  "description": "A React Native Wrapper that renders text with more/less buttons in just 2 renders.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "packageManager": "yarn@4.9.2",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "more-or-less.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "NODE_ENV=test jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
  "prepare": "husky install && bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "more",
    "less",
    "numberOfLines",
    "expand",
    "shrink"
  ],
  "repository": "https://github.com/rarenatoe/more-or-less",
  "author": "Renato Alegre <renatoealegre@gmail.com> (https://github.com/rarenatoe)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rarenatoe/more-or-less/issues"
  },
  "homepage": "https://github.com/rarenatoe/more-or-less#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.4",
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native/babel-preset": "0.75.3",
    "@react-native/eslint-config": "0.75.3",
    "@react-native/typescript-config": "0.75.3",
    "@release-it/conventional-changelog": "^2.0.0",
    "@testing-library/jest-native": "^4.0.4",
    "@testing-library/react-native": "^9.1.0",
    "@types/jest": "^27.5.1",
    "@types/react": "18.3.1",
    "@types/react-test-renderer": "18.3.0",
    "commitlint": "^19.0.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-ft-flow": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^6.0.0",
    "jest": "^29.0.3",
    "pod-install": "^0.1.0",
    "prettier": "^3.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.75.3",
    "react-native-builder-bob": "0.30.2",
    "react-test-renderer": "18.3.1",
    "release-it": "^14.2.2",
    "ts-jest": "^29.0.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-native": "*"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
